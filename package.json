{
  "name": "flowbite-svelte-mcp",
  "version": "0.2.0",
  "description": "MCP server for Flowbite-Svelte documentation (LLM)",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node build/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "gen:registry": "tsx scripts/generateComponentRegistry.ts",
    "ch": "npx changeset",
    "cv": "npx changeset version",
    "cp": "pnpm gen:registry && npx changeset publish"
  },
  "dependencies": {
    "@tmcp/adapter-zod": "^0.1.7",
    "@tmcp/transport-stdio": "^0.4.1",
    "node-fetch": "^3.3.2",
    "tmcp": "^1.18.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^61.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "mcp",
    "mcp server",
    "flowbite-svelte"
  ]
}
